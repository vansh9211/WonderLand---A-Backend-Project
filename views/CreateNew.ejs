<% layout("../views/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="mb-3">Create a New Listing</h3>

    <form method="POST" action="/listing" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="newListObj[title]"
          placeholder="Enter a captivating title"
          type="text"
          class="form-control"
          id="title"
          required
        />
        <div class="invalid-feedback">A valid title is required.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="newListObj[description]"
          class="form-control"
          id="description"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">A concise description is required.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          name="newListObj[image]"
          placeholder="Enter image URL"
          type="text"
          class="form-control"
          id="image"
        />
        <div class="invalid-feedback">An image URL is required.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="newListObj[price]"
            placeholder="e.g., 1200"
            type="number"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">Price must be a valid number.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            name="newListObj[location]"
            placeholder="e.g., New York City"
            type="text"
            class="form-control"
            id="location"
            required
          />
          <div class="invalid-feedback">Location is required.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="newListObj[country]"
          placeholder="e.g., United States"
          type="text"
          class="form-control"
          id="country"
          required
        />
        <div class="invalid-feedback">Country is required.</div>
      </div>

      <button type="submit" class="btn btn-dark add-btn mt-3">
        Create Listing
      </button>
    </form>
  </div>
</div>
<script>
  // Bootstrap custom validation
  (() => {
    'use strict'

    // Fetch all forms needing validation
    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
