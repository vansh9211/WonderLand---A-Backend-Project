<% layout("../views/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="mb-3">Edit Your Listing: <%= listData.title %></h3>

    <form
      method="POST"
      action="/listing/<%=listData._id%>?_method=PUT"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="newListObj[title]"
          value="<%= listData.title %>"
          type="text"
          class="form-control"
          id="title"
          required
        />
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="newListObj[description]"
          class="form-control"
          id="description"
          rows="5"
          required
        >
<%= listData.description %></textarea
        >
        <div class="invalid-feedback">Please enter a concise description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          name="newListObj[image]"
          value="<%= listData.image %>"
          type="text"
          class="form-control"
          id="image"
        />
        <div class="form-text">
          Paste a direct link to the new hosted image.
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="newListObj[price]"
            value="<%= listData.price %>"
            type="number"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">Price should be a valid number.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            name="newListObj[location]"
            value="<%= listData.location %>"
            type="text"
            class="form-control"
            id="location"
            required
          />
          <div class="invalid-feedback">Location cannot be empty.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="newListObj[country]"
          value="<%= listData.country %>"
          type="text"
          class="form-control"
          id="country"
          required
        />
        <div class="invalid-feedback">Country cannot be empty.</div>
      </div>

      <button type="submit" class="btn btn-success edit-btn mt-3">
        Apply Changes
      </button>
    </form>

    <div class="my-3">
      <a href="/listing/<%=listData._id%>" class="btn btn-secondary">
        Cancel
      </a>
    </div>
  </div>
</div>


<script>
  // Bootstrap custom validation
  (() => {
    'use strict'

    // Fetch all forms needing validation
    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
