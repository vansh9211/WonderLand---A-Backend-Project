<% layout("../views/layouts/boilerplate.ejs") %>
<style>
  #outer-container {
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
  }
  .card {
    width: 700px;
  }
  .card-img-top {
    border-radius: 1rem !important;
    width: 100%;
    height: 240px;
  }
</style>
<body>
  <% if(successMsg && successMsg.length) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%=successMsg%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
  
  <div id="outer-container">
    <% for(let list of allListingData) { %>
    <div class="card" style="width: 18rem; border-radius: 22px">
      <img src="<%=list.image%>" class="card-img-top" alt="listing-image" />
      <div class="card-body">
        <h5 class="card-title"><%= list.title %></h5>
        <p class="card-text"><%= list.description %></p>
        <p class="card-text">Price: $<%= list.price %>/night</p>

        <a href="/listing/<%=list._id%>" class="btn btn-primary"
          >View Details</a
        >
      </div>
    </div>
    <% } %>
  </div>
</body>
<br /><br />
