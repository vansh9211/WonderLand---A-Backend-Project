<style>
  .navbar {
    height: 70px;
    padding-right: 12px;
    padding-left: 12px;
    border-bottom: 0.3px solid rgb(142, 141, 141);
    margin-bottom: 34px;
  }
  .navLogo{
    color : rgb(54, 100, 215);
    font-weight: 700;
  }
  .search-form-container input {
    width: 600px;
  }
  .search-form-container button {
    margin-right: 45px;
    width: 100px;
  }
  .bar {
    display: flex;
    justify-content: space-between;
    gap: 50px;
  }
</style>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand navLogo" href="#">WonderLand</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/listing"
            >Explore</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listing/new">Add new listing</a>
        </li>
      </ul>
    </div>
    <ul class="navbar-nav">
      <div class="bar d-none d-lg-flex search-form-container mx-auto">
        <form class="d-flex w-100" role="search">
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search for Location or Title..."
            aria-label="Search"
          />
          <button class="btn btn-outline-success search-btn" type="submit">
            <i class="bi bi-search"></i>
            Search
          </button>
        </form>
      </div>

      <% if(!currentUser) {%>
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="/login">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/signup">Sign up</a>
      </li>

      <% } else { %>
      <li class="nav-item">
        <a class="nav-link" href="/logout"><%= currentUser.username %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Log out</a>
      </li>
      <% } %>
    </ul>
  </div>
</nav>
