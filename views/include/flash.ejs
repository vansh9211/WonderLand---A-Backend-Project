 <% if(successMsg && successMsg.length) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%=successMsg%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>

   <% if(errorMsg && errorMsg.length) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%=errorMsg%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>